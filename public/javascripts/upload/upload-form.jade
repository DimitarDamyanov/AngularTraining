div(ng-controller="ImageUploadCtrl" nv-file-drop="" uploader="uploader")
    div(ng-show="uploader.isHTML5")
        .well.my-drop-zone(nv-file-over="" uploader="uploader")
            | Drop zone

        button.btn.btn-success(type="button" ng-click="uploader.customUploadALl()" ng-disabled="!uploader.getNotUploadedItems().length")
            span.glyphicon.glyphicon-upload Upload
        p Queue length: {{ uploader.queue.length }}
        .panel.panel-default
            .panel-heading.panel-heading-custom
                h4.panel-title  Images Preview
            .panel-body
                ul
                    .row
                        li(ng-repeat="item in uploader.queue")
                            div.col-md-8.thumbnail(href="#")
                                div(ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 200}")

